<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgbgcolor"
    android:outlineAmbientShadowColor="#00C3B7B7"
    android:outlineSpotShadowColor="#00D9C5C5"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="361dp"
        android:layout_height="423dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="158dp"
        android:layout_marginBottom="118dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/quitButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/profileButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/on"
            android:backgroundTint="#00FFFFFF"
            android:backgroundTintMode="add"
            android:fontFamily="@font/permanent_marker"
            android:outlineAmbientShadowColor="#00FFFFFF"
            android:outlineSpotShadowColor="#000F0000"
            android:shadowColor="#00FFFFFF"
            android:text="Профиль"
            android:textColor="#FFFFFF"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/logoImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.507" />

        <androidx.constraintlayout.widget.Barrier
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:barrierDirection="left" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="34dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mediaButton"
            android:layout_width="331dp"
            android:layout_height="95dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/on"
            android:backgroundTint="#00FFFFFF"
            android:backgroundTintMode="add"
            android:fontFamily="@font/permanent_marker"
            android:outlineAmbientShadowColor="#00FFFFFF"
            android:outlineSpotShadowColor="#000F0000"
            android:shadowColor="#00FFFFFF"
            android:text="Медиа"
            android:textColor="#FFFFFF"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/logoImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.507" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="37dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/randnumButton"
            android:layout_width="329dp"
            android:layout_height="90dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/on"
            android:backgroundTint="#00FFFFFF"
            android:backgroundTintMode="add"
            android:fontFamily="@font/permanent_marker"
            android:outlineAmbientShadowColor="#00FFFFFF"
            android:outlineSpotShadowColor="#000F0000"
            android:shadowColor="#00FFFFFF"
            android:text="Рандомное число"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/logoImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.507" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/quitButton"
        android:layout_width="288dp"
        android:layout_height="63dp"
        android:layout_marginStart="61dp"
        android:layout_marginBottom="129dp"
        android:background="@drawable/ontwo"
        android:backgroundTint="#00FFFFFF"
        android:backgroundTintMode="add"
        android:fontFamily="@font/permanent_marker"
        android:outlineAmbientShadowColor="#00FFFFFF"
        android:outlineSpotShadowColor="#000F0000"
        android:shadowColor="#00FFFFFF"
        android:text="Выход"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>